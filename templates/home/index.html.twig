{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .full-width-image { width: 100%; height: auto; }
        .timer { font-size: 15em; text-align: center; margin-bottom: 20px; }
    </style>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! âœ…</h1>
        <div id="timer" class="timer">20</div>
        <div id="images" style="display: none;">
            {% if genre == "gender" %}
                <img src="{{ asset('images/img99.png') }}" alt="Image99" class="full-width-image">
            {% else %}
                <img src="{{ asset('images/img77.png') }}" alt="Image88" class="full-width-image">
            {% endif %}
        </div>
    </div>

    <script>
        let countdown = 20;
        const timerElement = document.getElementById('timer');
        const imagesElement = document.getElementById('images');

        const timerInterval = setInterval(() => {
            countdown--;
            timerElement.textContent = countdown;

            if (countdown === 0) {
                clearInterval(timerInterval);
                timerElement.style.display = 'none';
                imagesElement.style.display = 'block';
            }
        }, 1000);
    </script>
{% endblock %}
